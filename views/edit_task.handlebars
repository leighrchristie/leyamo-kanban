<head>
    <link href="https://fonts.googleapis.com/css2?family=Comfortaa:wght@300&display=swap" rel="stylesheet">
</head>

<body>
    <div>
        <h1 style="padding-top: 100px; padding-bottom: 30px; text-align: center">Edit Task in <i>{{project.name}}</i></h1>
    </div>
    <main class="structure-body">
        <form class="form-structure" action="/project_board/{{project.id}}/edit_task/{{task.id}}" method="POST">
            <label>New name</label>
            <input name="name" type="text" value="{{task.name}}" required />
            <br>
            <label for="assignee">New assignee</label>
            <select name="assignee" id="assignee">
                <option value="unassigned">unassigned</option>
                {{#each users}}
                <option value="{{this.id}}">{{this.name}}</option>
                {{/each}}
            </select>
            <br>
            <button>Edit task</button>
            <a href="/project_board/{{project.id}}"><button>Cancel</button></a>
        </form>
    </main>
</body>